---
interface Props {
	title: string;
	image: string;
	id: string;
	description: string;
}

const { title, image, id, description } = Astro.props;
---

<div
	class="bg-white flex flex-col rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow"
>
	<img src={image} alt={title} class="h-[515px] object-contain" />
	<div class="p-4">
		<h2 class="text-xl font-semibold mb-2">{title}</h2>
		<p class="text-gray-600 mb-4">{description}</p>
		<a
			href={`/form/${id}`}
			class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors"
		>
			Seleccionar
		</a>
	</div>
</div>
